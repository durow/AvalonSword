<Window x:Class="WpfSample.Views.RemarkEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSample.Views" WindowStartupLocation="CenterOwner"
        mc:Ignorable="d" SizeToContent="WidthAndHeight"
        Title="RemarkEditView" Height="200" Width="300">
    <StackPanel>
        <TextBlock Text="EditRemark:" Margin="10,10,10,0"/>
        <TextBox Text="{Binding RemarkText}" Margin="10,0,10,10" Width="300"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Command="{Binding CmdOk}" Width="60" Margin="10,10,0,10"/>
            <Button Content="Cancel" Command="{Binding CmdCancel}" Width="60" Margin="0,10,10,10"/>
        </StackPanel>
    </StackPanel>
</Window>
